{
    "openapi": "3.0.0",
    "info": {
        "title": "Service API",
        "version": "1.0.0",
        "description": "Service Discovery API"
    },
    "paths": {
        "/api/service/register": {
            "post": {
                "summary": "Register a service instance",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "serviceName": {
                                        "type": "string"
                                    },
                                    "serviceId": {
                                        "type": "string"
                                    },
                                    "url": {
                                        "type": "string"
                                    },
                                    "healthcheck": {
                                        "type": "object",
                                        "properties": {
                                            "url": {
                                                "type": "string"
                                            },
                                            "checkInterval": {
                                                "type": "integer",
                                                "description": "The interval to check the health status in seconds"
                                            }
                                        }
                                    }
                                },
                                "required": [
                                    "service_name",
                                    "service_id",
                                    "url"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Validation Error"
                    }
                }
            }
        },
        "/api/service/shutdown": {
            "post": {
                "summary": "Delete a service from the registry",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "serviceName": {
                                        "type": "string"
                                    },
                                    "serviceId": {
                                        "type": "string"
                                    },
                                    "reason": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "service_name",
                                    "service_id",
                                    "reason"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "instances": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "id": {
                                                        "type": "string"
                                                    },
                                                    "url": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Service Not Found"
                    }
                }
            }
        },
        "/api/service/{service_name}": {
            "get": {
                "summary": "Get instances of a service",
                "parameters": [
                    {
                        "name": "service_name",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "instances": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "id": {
                                                        "type": "string"
                                                    },
                                                    "url": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Service Not Found"
                    }
                }
            }
        }
    }
}
